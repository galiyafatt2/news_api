<h1>News</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Published at</th>
    <th>Visible</th>
    <th>Image</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @all_news.each do |news| %>
    <tr>
      <td><%= news.title %></td>
      <td><%= news.content %></td>
      <td><%= news.published_at %></td>
      <td><%= news.visible %></td>
      <td>
        <% if news.images.attached? %>
          <% news.images.each do |image| %>
            <%= image_tag url_for(image) %>
          <% end %>
        <% end %>
      </td>
      <td><%= link_to 'Show', [:admin, news] %></td>
      <td><%= link_to 'Edit', edit_admin_news_path(news) %></td>
      <td><%= button_to 'Destroy', [:admin, news], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News', new_admin_news_path %>
